<main>
  <section class='crypto-search'>
    <h1>Search</h1>

    <form class='search-form' method='GET'>
      <input
        type='text'
        class='search-coin'
        name='name'
        placeholder='Search here...'
      />
      <select id='payment' name='paymentMethod'>
          {{#each paymentMethods}}
            <option value="{{key}}"{{#if isSelected}}selected{{/if}}>{{label}}</option>
          {{/each}}
      </select>
      <button type='submit' class='btn-search'>Search</button>
    </form>

    {{#if crypto}}
      <div class='search-result'>
        <div class='search-list'>
          {{#each crypto}}
            <div class='coin'>
              <div class='coin-img'>
                <img src='{{image}}' />
              </div>
              <div class='coin-info'>
                <h1>{{name}}</h1>
                <p><span>Price: </span>${{price}}</p>
                <p><span>Payment: </span>{{paymentMethod}}</p>
              </div>
              <a href='/crypto/{{_id}}/details' class='btn-details'>Details</a>
            </div>
          {{/each}}
        </div>
      </div>
    {{else}}
      <div class='no-match'>
        <p>No match was found!</p>
      </div>
    {{/if}}
  </section>
</main>